<script src="https://cdn.tailwindcss.com"></script>

<div id="cartContainer" class="container mx-auto mt-10">
    <div class="sm:flex shadow-md my-10">
      <div class="  w-full  sm:w-3/4 bg-white px-10 py-10">
        <div class="flex justify-between border-b pb-8">
        <h1 class="font-semibold text-2xl">Shopping Cart</h1>
          <h2 class="totalProducts font-semibold text-2xl"></h2>
        </div>
        <!--Example Item-->
        {{#each carts as |cart|}}
        <div class="cart-item md:flex items-strech py-8 md:py-10 lg:py-8 border-t border-gray-50">
          <div class="md:w-4/12 2xl:w-1/4 w-full">
            <img src="{{cart.img}}" alt="Black Leather Purse" class="h-full object-center object-cover md:block hidden" />
            <img src="{{cart.img}}" alt="Black Leather Purse" class="md:hidden w-full h-full object-center object-cover" />
          </div>
          <div class="md:pl-3 md:w-8/12 2xl:w-3/4 flex flex-col justify-center">
            <div class="flex items-center justify-between w-full">
              <p class="text-base font-black leading-none text-gray-800">{{cart.title}}</p>
              <!--Quantity Input-->
              <input class="cartQuantityInputs py-2 px-1 border border-gray-200 focus:outline-none" value="1">
            </div>
            <div class="flex items-center justify-between pt-5">
              <div class="flex itemms-center">
                <button  class="delete-button text-xs leading-3 underline text-red-500 cursor-pointer" data-id="{{cart.id}}">Remove</button>
              </div>
              <p class="item-price text-base leading-none text-gray-800 ">{{cart.price}} Each</p>
            </div>
          </div>
        </div>
  {{/each}}
        <a href="/homepage" class="flex font-semibold text-indigo-600 text-sm mt-10">
          <svg class="fill-current mr-2 text-indigo-600 w-4" viewBox="0 0 448 512">
            <path
              d="M134.059 296H436c6.627 0 12-5.373 12-12v-56c0-6.627-5.373-12-12-12H134.059v-46.059c0-21.382-25.851-32.09-40.971-16.971L7.029 239.029c-9.373 9.373-9.373 24.569 0 33.941l86.059 86.059c15.119 15.119 40.971 4.411 40.971-16.971V296z" />
          </svg>
          Continue Shopping
        </a>
      </div>
      <div id="summary" class=" w-full   sm:w-1/4   md:w-1/2     px-8 py-10">
        <h1 class="font-semibold text-2xl border-b pb-8">Order Summary</h1>
        <div class="mt-8">
          <div id="totalCost" class="flex font-semibold justify-between py-6 text-sm uppercase">
            <span>Total cost</span>
            <span id="totalCost"></span>
          </div>
          <button class="bg-indigo-500 font-semibold hover:bg-indigo-600 py-3 text-sm text-white uppercase w-full">
                Checkout
              </button>
        </div>
      </div>
    </div>
  </div><script src="./Cart.js"></script>
  </div><script src="./cartDelete.js"></script>