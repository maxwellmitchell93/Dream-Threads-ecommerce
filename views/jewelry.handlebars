{{{sectionContent}}}
<section class="bg-white py-8">
    <div class="container mx-auto flex items-center flex-wrap pt-4 pb-12">
        {{#each products}}
        <div class="w-full md:w-1/3 xl:w-1/4 p-6 flex flex-col">
                <img class="hover:grow hover:shadow-lg cursor-pointer" src={{image}}>
                <div class="container">
                    <div class="hover:underline pt-3 flex items-center justify-between">
                        <p class="">{{name}}</p>
                        <button onclick="openModal('{{id}}');"
                            class="has-text-centered content button is-size-7 is-success">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M12 4v16m8-8H4"></path>
                            </svg>
                        </button>
                    </div>
                    <p class="pt-1 text-gray-900">{{price}}</p>
                    <div class="modal" id="{{id}}">
                        <div class="modal-background"></div>
                        <div class="modal-card">
                            <header class="modal-card-head flex justify-between items-center">
                                <h1 class="modal-card-title">Quickview</h1>
                                <button onclick="closeModal('{{id}}');"
                                    class="has-text-centered content button is-size-7 is-success">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512">
                                        <path
                                            d="M376.6 84.5c11.3-13.6 9.5-33.8-4.1-45.1s-33.8-9.5-45.1 4.1L192 206 56.6 43.5C45.3 29.9 25.1 28.1 11.5 39.4S-3.9 70.9 7.4 84.5L150.3 256 7.4 427.5c-11.3 13.6-9.5 33.8 4.1 45.1s33.8 9.5 45.1-4.1L192 306 327.4 468.5c11.3 13.6 31.5 15.4 45.1 4.1s15.4-31.5 4.1-45.1L233.7 256 376.6 84.5z">
                                        </path>
                                    </svg>
                                    <i class="fa-solid fa-x"></i>
                                </button>
                            </header>
                            <section class="modal-card-body">
                                <div class="box">
                                    <article class="media">
                                        <div class="media-left">
                                            <figure class="image is-128x128">
                                                <img id="img" src={{image}}>
                                            </figure>
                                        </div>
                                        <div class="media-content">
                                            <div class="content">
                                                <h1 id="title" class="is-underlined">{{name}}</h1>
                                                <p id="price"> {{price}}</p>
                                                <!-- Add additional modal content here -->
                                            </div>
                                            <footer class="modal-card-foot">
                                                <button id="addToCart" class="addToCart button is-fullwidth" data-item='{"title": "{{name}}", "img": "{{image}}", "price": "{{price}}"  }'>Add to Cart</button>
                                            </footer>
                                        </div>
                                    </article>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            
        </div>
        {{/each}}
    </div>
</section>
<script src="./Cart.js"></script>